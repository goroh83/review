<% include ../partials/header  %>

<div class='container'>
    <div class='row'>
    <h1 style='text-align: center;'>Add new comment to <%= photo.name %>:</h1>
        <div style='width:30%; margin: 25px auto;'>
        <form action='/photos/<%= photo._id %>/comments' method='POST'>
            <div class='form-group text-center'>
                <label>author:</label><br>
                <input type='text' name='comment[author]' class='form-control'><br>
            </div>    
            <div class='form-group text-center'>
                <label class='text-center'>description:</label><br>
                <textarea type='text' name='comment[text]' class='form-control'></textarea> <br>
            </div>    
            <div class='form-group'>
                <button class='btn btn-md btn-primary btn-block'>Submit</button>
            </div>
        </form>
        <a href='/photos'>Go back</a>
        </div>
    </div>    
</div>
<% include ../partials/footer  %>