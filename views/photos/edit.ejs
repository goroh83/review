<% include ../partials/header  %>

<div class='container'>
    <div class='row'>
    <h1 style='text-align: center;'>Edit post: <%= photo.name %></h1>
        <div style='width:30%; margin: 25px auto;'>
        <form action='/photos/<%= photo._id %>/?_method=PUT' method='POST'>
            <div class='form-group text-center'>
                <label>name:</label><br>
                <input type='text' name='photo[name]' class='form-control' value='<%= photo.name %>'><br>
            </div>    
            <div class='form-group text-center'>
                <label class='text-center'>image:</label><br>
                <input type='text' name='photo[image]' class='form-control' value='<%= photo.image %>'><br>
            </div>
            <div class='form-group text-center'>
                <label class='text-center'>description:</label><br>
                <input type='text' name='photo[desc]' class='form-control' value='<%= photo.desc %>'></input><br>
            </div>    
            <div class='form-group'>
                <button class='btn btn-md btn-primary btn-block'>Update</button>
            </div>
        </form>
        <a href='/photos'>Go back</a>
        </div>
    </div>    
</div>
<% include ../partials/footer  %>